<api context="/debugger" name="debugger" xmlns="http://ws.apache.org/ns/synapse">
    <resource methods="POST" url-mapping="/postUrl">
        <inSequence>
            <log category="INFO" logMessageID="false" logFullPayload="false">
                <message></message>
            </log>
            <log category="INFO" logMessageID="false" logFullPayload="false">
                <message></message>
            </log>
        </inSequence>
        <outSequence>
            <log category="INFO" logMessageID="false" logFullPayload="false">
                <message></message>
            </log>
            <log category="INFO" logMessageID="false" logFullPayload="false">
                <message></message>
            </log>
        </outSequence>
        <faultSequence>
            <log category="INFO" logMessageID="false" logFullPayload="false">
                <message></message>
            </log>
            <log category="INFO" logMessageID="false" logFullPayload="false">
                <message></message>
            </log>
        </faultSequence>
    </resource>
    <resource methods="POST" uri-template="/postUri/{path1}?query1={query1}">
        <inSequence>
            <log category="INFO" logMessageID="false" logFullPayload="false">
                <message></message>
            </log>
            <log category="INFO" logMessageID="false" logFullPayload="false">
                <message></message>
            </log>
        </inSequence>
        <faultSequence>
            <log category="INFO" logMessageID="false" logFullPayload="false">
                <message></message>
            </log>
            <log category="INFO" logMessageID="false" logFullPayload="false">
                <message></message>
            </log>
        </faultSequence>
    </resource>
</api>
