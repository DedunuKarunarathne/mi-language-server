<sequence name="filterTest" trace="disable" xmlns="http://ws.apache.org/ns/synapse">
    <log category="INFO" logMessageID="false" logFullPayload="false">
        <message></message>
    </log>
    <filter xpath="${payload}">
        <then>
            <log category="INFO" logMessageID="false" logFullPayload="false">
                <message></message>
            </log>
            <filter xpath="${payload}">
                <then>
                    <log category="INFO" logMessageID="false" logFullPayload="false">
                        <message></message>
                    </log>
                </then>
                <else>
                    <log category="INFO" logMessageID="false" logFullPayload="false">
                        <message></message>
                    </log>
                </else>
            </filter>
        </then>
        <else>
            <log category="INFO" logMessageID="false" logFullPayload="false">
                <message></message>
            </log>
            <filter xpath="${payload}">
                <then>
                    <log category="INFO" logMessageID="false" logFullPayload="false">
                        <message></message>
                    </log>
                </then>
                <else>
                    <log category="INFO" logMessageID="false" logFullPayload="false">
                        <message></message>
                    </log>
                </else>
            </filter>
        </else>
    </filter>
    <log category="INFO" logMessageID="false" logFullPayload="false">
        <message></message>
    </log>
</sequence>
